<apex:page standardController="dissecting__Credit_Memo__c" extensions="VoucherPageController" renderAs="pdf" applyBodyTag="false">
    <head>
        <style type="text/css">
            @page {
                size: A5 landscape;
                margin: 0;
                padding: 0;
            }

            html, body {
                position: relative;
                color: {!BLANKVALUE(creditMemo.dissecting__Text_Color__c, "white")};
                font-family: Verdana, Arial, Helvetica, sans-serif;
                margin: 0;
                padding: 0;
                height: 100%;
                width: 100%;
            }

            #imgId {
                position: absolute;
                width: 100%;
                height: 100%;
            }

            #textBlockId {
                position: absolute;
                margin-top: 4%;
                margin-left: 5%;
            }

            .textValue {
                font-size: 300%;
                line-height: 0.9em;
            }

            .textSeparator {
                position: absolute;
                margin-top: 4%;
                margin-left: 33%;
                font-size: 470%;
            }

            .currencyValue {
                position: absolute;
                margin-top: 9%;
                margin-left: 36%;
                font-size: 120%;
            }

            .amountValue {
                position: absolute;
                margin-top: 5%;
                margin-left: 38%;
                font-size: 400%;
            }

            .exclusivelyForText {
                position: absolute;
                margin-top: 17%;
                margin-left: 5%;
                font-size: 140%;
            }

            .exclusivelyForValue {
                position: absolute;
                margin-top: 16%;
                margin-left: 24%;
                font-size: 190%;
            }

            #noteValueId {
                position: absolute;
                margin-top: 25%;
                margin-left: 40%;
                font-size: 110%;
            }

            .voucherNumValue {
                position: absolute;
                font-weight: bold;
                margin-top: 65%;
                margin-left: 3%;
                font-size: 90%;
            }

            #logoId {
                position: absolute;
                width: 10%;
                height: 10%;
                margin-top: 61%;
                margin-left: 85%;
            }

            #backgroundMsgId {
                position: absolute;
                width: 100%;
                height: 15%;
                background-color: red;
            }

            .errorMsg {
                position: absolute;
                margin-left: 10%;
                font-weight: bold;
                font-size: 400%;
            }
        </style>
    </head>
    <body>
        <apex:outputpanel rendered="{!NOT(imageIsFound)}">
            <div id="backgroundMsgId">
                <span class="errorMsg">Voucher is not found</span>
            </div>
        </apex:outputpanel>
        <apex:outputpanel rendered="{!imageIsFound}">
            <img id="imgId" src="{!documentUrl}"/>
            <div id="textBlockId">
                <span class="textValue">travel gift</span>
                <br></br>
                <span class="textValue">certificate</span>
            </div>
            <span class="textSeparator">|</span>
            <span class="currencyValue">{!creditMemo.dissecting__Currency_ISO__c}</span>
            <span class="amountValue">{!ROUND(creditMemo.dissecting__Amount__c, 0)}</span>
            <span class="exclusivelyForText">Exclusively for</span>
            <span class="exclusivelyForValue">
                {!BLANKVALUE(creditMemo.dissecting__Exclusively_For__c, creditMemo.dissecting__Account__r.Name)}
            </span>
            <div id="noteValueId">
                <apex:outputText value="{!creditMemo.dissecting__Note__c}" escape="false"/>
            </div>
            <span class="voucherNumValue">Voucher No: {!creditMemo.Name}</span>
            <img id="logoId" src="{!URLFOR($Resource.sfLogo)}"/>
        </apex:outputpanel>
    </body>
</apex:page>